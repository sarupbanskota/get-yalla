<h3> Categories </h3>

<br>
<br>

{{#each model as |category|}}
  <span style='background-color: {{category.color}}'> &nbsp; </span>
  &nbsp;
  <span {{action 'toggleCategoryForm' category.id}}> {{category.name}} </span>
  <br>
{{/each}}

<br>
<br>

{{#if showingCategoryForm}}
  <h4> New category form </h4>
  {{input value=categoryName placeholder='Name'}}
  <br>  <br>
  {{spectrum-color-picker color=categoryColor preferredFormat='hex'}}
  <br>  <br>
  <button class='btn btn-success' {{action 'createOrEditCategory' editingCategoryId}}> Create </button>
{{/if}}
<button class='btn' {{action 'toggleCategoryForm'}}> {{buttonMessage}} </button>
