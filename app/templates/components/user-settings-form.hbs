<form>
  {{#if countries}}
    <div class="form-group">
      <label> Primary Country </label>
      <select class="form-control country-select">
        {{#each countries as |country|}}
          <option value={{country.code}}> {{country.name}} ({{country.code}}) </option>
        {{/each}}
      </select>
    </div>
  {{else}}
    <span> Loading countries... </span>
    <br>
    <br>
  {{/if}}

  {{#if timezones}}
    <div class="form-group">
      <label> Current Timezone </label>
      <select class="form-control timezone-select">
        {{#each timezones as |timezone|}}
          <option value={{timezone.code}}> {{timezone.name}} </option>
        {{/each}}
      </select>
    </div>
  {{else}}
    <span> Loading timezones... </span>
    <br>
    <br>
  {{/if}}

  <button type="submit" class="btn btn-primary" {{action 'updateUserSettings'}}>
    All set, get me started!
  </button>
</form>
