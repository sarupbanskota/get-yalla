{{title}}. {{#link-to 'requests.new'}} New request{{/link-to}}?
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th> Requested By </th>
      <th> Dates </th>
      <th> Description </th>
      <th> Status </th>
    </tr>
  </thead>
  <tbody>
    {{#each requests as |request|}}
      <tr>
        <th>
          <img src="{{request.requestedByAvatar}}" alt="{{request.requestedBy}}" height="30px">
          {{request.requestedBy}}
        </th>
        <td>
          {{moment-format request.from 'DD MMM'}} â†’ {{moment-format request.to 'DD MMM'}}
          <small class="text-muted">
            <br>
            5 days
          </small>
        </td>
        <td>
          <!-- <span class="tag tag-pill tag-primary"> {{request.type}} </span> -->
          <small class="text-muted">
            <!-- <br> -->
            {{request.description}}
          </small>
        </td>
        <td>
          <div class="dropdown">
            <button class="btn btn-{{request.statusClass}} btn-sm dropdown-toggle" type="button"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{request.status}}
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" {{action 'updateRequestStatus' request 'Pending'}}> Pending </a>
              <a class="dropdown-item" {{action 'updateRequestStatus' request 'Accepted'}}> Accepted </a>
              <a class="dropdown-item" {{action 'updateRequestStatus' request 'Rejected'}}> Rejected </a>
            </div>
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
