<table class='table table-bordered'>
  <thead>
    <tr>
      <th> Username </th>
      {{#each viewingPeriod as |day|}}
        <th>
          <center>
            <small class='text-muted'> {{moment-format day 'dd' 'DD-MM-YYYY' }} </small>
            {{moment-format day 'D' 'DD-MM-YYYY' }}
          </center>
        </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each data as |user|}}
      <tr>
        <td> {{user.username}} </td>
        {{#each viewingPeriod as |day|}}
          <td id="{{user.username}}-{{day}}">
            <small class='text-muted'>  </small>
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>

<hr>

<a {{action 'changePeriod' 'week'  ''}}> Week </a>
<a {{action 'changePeriod' 'month' ''}}> Month </a>


<a {{action 'changePeriod' '' 'prev'}}> prev </a>
<a {{action 'changePeriod' '' 'next'}}> next </a>
