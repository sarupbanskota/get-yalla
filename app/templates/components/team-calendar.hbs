<div class="table-responsive">
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th> Username </th>
        {{#each viewingPeriod as |day|}}
          <th class="{{moment-format day 'dddd'}}">
            <center>
              <small class='text-muted'> {{moment-format day 'dd'}} </small>
              {{moment-format day 'D'}}
            </center>
          </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{#each data as |user|}}
        <tr>
          <td> {{user.username}} </td>
          {{#each viewingPeriod as |day|}}
            <td id="{{user.username}}-{{moment-format day 'DD-MM-YYYY'}}" class="{{moment-format day 'dddd'}}">
              <small class='text-muted'></small>
            </td>
          {{/each}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<hr>

<a {{action 'changePeriod' '' 'prev'}}> prev </a>
<a {{action 'changePeriod' '' 'next'}}> next </a>

<br>
<br>

{{#if (eq unit 'month')}}
  <a {{action 'changePeriod' 'week'  ''}}> Week </a>
{{else}}
  <a {{action 'changePeriod' 'month' ''}}> Month </a>
{{/if}}
